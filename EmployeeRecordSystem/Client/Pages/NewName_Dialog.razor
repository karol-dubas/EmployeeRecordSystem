<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Nazwa" @bind-Value="name"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    string name;

    void Cancel() => MudDialog.Cancel();
    void Submit() => MudDialog.Close(name);
}