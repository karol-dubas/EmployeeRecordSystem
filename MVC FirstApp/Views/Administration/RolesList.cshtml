@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

@if (Model.Count() == 2)
{
    <div class="mt-5 mx-auto col-8">
        @foreach (var role in Model)
        {
            <div class="card mr-4 col-5 p-0" style="display:inline-block">
                <div class="card-header">
                    <h3 class="mb-2">@role.Name</h3>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary btn-lg btn-block" asp-controller="Administration" asp-action="EditRole" asp-route-name="@role.Name">Edytuj</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <a class="btn btn-primary btn-lg" asp-controller="Administration" asp-action="CreateRoles">Stwórz role</a>
}
