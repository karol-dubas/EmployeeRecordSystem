@model MVC_FirstApp.Models.ViewModels.EditRoleUsersViewModel

@{
    ViewData["Title"] = "EditRole";
}

<form method="post">
    <div class="card mx-auto col-6 p-0">
        <div class="card-header">
            <h1>Edytuj rolę</h1>
        </div>
        <div class="card-body">
            <label asp-for="RoleName"style="display:inline-block; font-size:17px" class="mr-2"></label>
            <input asp-for="RoleName" disabled class="form-control" style="width:auto; display:inline-block; text-align:center"/>
            <input asp-for="RoleName" type="hidden" class="form-control" />
        </div>
        <div class="card-header">
            <h3>Lista użytkowników</h3>
        </div>
        <div class="card-body pb-2">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h6 class="card-title">@user</h6>
                }
            }
            else
            {
                <h6 class="card-title">brak</h6>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-name="@Model.RoleName"
               class="btn btn-primary" style="width:auto">Dodaj/Usuń użytkowników</a>
            <a asp-action="RolesList" asp-controller="Administration" class="btn btn-secondary float-right" style="width:auto">Powrót</a>
        </div>
    </div>
</form>