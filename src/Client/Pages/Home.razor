@page "/"
@inject BreadcrumbStateContainer _breadcrumbs
@inject BreadcrumbBuilder _breadcrumbBuilder

@code {
    protected override void OnInitialized()
    {
        CreateBreadcrumbs();
    }

    void CreateBreadcrumbs()
    {
        _breadcrumbs.Items = _breadcrumbBuilder
            .AddHome()
            .Build();
    }
}
